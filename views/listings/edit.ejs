<% layout("/layouts/boilerplate.ejs") %>

<div class="row mt-3">
  <div class="col-8 offset-2">
    <h3>Edit this listing : <%= listing._id %></h3>
    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          name="listing[title]"
          type="text"
          class="form-control"
          value="<%=listing.title%>"
          required
        />
        <div class="invalid-feedback">Please enter title</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control" required>
<%=listing.description%></textarea
        >
        <div class="invalid-feedback">Please insert a short discription</div>
      </div>
      <div class="mb-3">
        Original listing image <br />
        <img src="<%= originalImageUrl %>" />
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input name="listing[image]" class="form-control" type="file" />
        <!-- <div class="invalid-feedback">URL/Link should be valid</div> -->
      </div>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="number"
            class="form-control"
            name="listing[price]"
            required
            value="<%=listing.price%>"
          />
          <div class="invalid-feedback">Price should be valid</div>
        </div>
        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            class="form-control"
            name="listing[country]"
            required
            value="<%=listing.country%>"
          />
          <div class="invalid-feedback">Country should be valid</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listing[location]"
          class="form-control"
          required
          value="<%=listing.location%>"
        />
        <div class="invalid-feedback">Location should be valid</div>
      </div>

      <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
  </div>
</div>
