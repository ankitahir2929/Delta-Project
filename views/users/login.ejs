<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <h1 class="col-6 offset-4">Login on WonderLust</h1>
  <div class="col-6 offset-3">
    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input
          name="username"
          type="text"
          id="username"
          class="form-control"
          required
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input
          name="password"
          type="password"
          id="password"
          class="form-control"
          required
        />
      </div>
      <button class="btn btn-dark col-12">Login</button>
    </form>
    <form action="/signup" method="GET">
      <button class="btn btn-dark mt-3 col-12">SignUp</button>
    </form>
  </div>
</div>
